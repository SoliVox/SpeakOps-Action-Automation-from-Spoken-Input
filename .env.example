SS_API_KEY=replace_me
PORT=3000
RATE_LIMIT_PER_MIN=60

# Default workflow type (blog_post, task_extraction, meeting_notes, email_draft, or generic)
DEFAULT_WORKFLOW=generic

# Optional: Logging
LOG_FILE=./logs/app.log
NODE_ENV=development

# WordPress integration (optional)
# WORDPRESS_URL=https://yoursite.com
# WORDPRESS_TOKEN=your_wordpress_token

# Notion integration (optional)
# NOTION_TOKEN=your_notion_token
# NOTION_DATABASE_ID=your_database_id

# Asana integration (optional)
# ASANA_TOKEN=your_asana_token
# ASANA_WORKSPACE_ID=your_workspace_id

# LLM API (OpenAI - required for workflows)
OPENAI_API_KEY=sk-your_openai_api_key_here

# Alternative LLM providers (optional, not yet implemented)
# ANTHROPIC_API_KEY=your_anthropic_key
# GOOGLE_AI_KEY=your_google_key
